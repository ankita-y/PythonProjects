fname = input("Enter file name: ")
if len(fname) < 1 : fname = "mbox-short.txt"

fh = open(fname)
count = 0
lst = list()
for line in fh:
    line.rstrip()
    if not line.startswith('From '): continue
    lst = line.split()
    word = lst[1]
    print(word)
    count = count +1
print("There were", count, "lines in the file with From as the first word")
